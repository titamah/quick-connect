{
  "rewrites": [
    {
      "source": "/remix/:id/?",
      "destination": "/api/remix/:id",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": ".*(bot|crawler|spider|facebookexternalhit|twitterbot|linkedinbot|whatsapp|telegram|discord|slackbot|skype|googlebot|bingbot|yahoo|duckduckbot).*"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/((?!api)(?!_next)(?!favicon\\.ico).*)",
      "destination": "/index.html"
    }
  ]
}