{
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/api/$1"
      },
      {
        "src": "/remix/([^/]+)$",
        "dest": "/remix/$1"
      },
      {
        "src": "/((?!api/).*)",
        "dest": "/index.html"
      }
    ],
    "functions": {
      "api/remix/[id].js": {
        "runtime": "edge"
      }
    },
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/api/$1"
      },
      {
        "source": "/((?!api/).*)",
        "destination": "/index.html"
      }
    ]
  }